model Products {
  id        String   @id @default(uuid()) @map("_id")
  title     String?  @unique
  desc      String?
  category  String?
  price     Int?     @default(0)
  image     String?
  createdAt DateTime @default(now())
}

model Estoques {
  id        String @id @default(uuid()) @map("_id")
  idProduct String
  qtd       Int
}

enum TipeUserRole {
  admin
  user
}

model Categorys {
  id        String   @id @default(uuid()) @map("_id")
  name      String
  createdAt DateTime @default(now())
}

model Cart {
  id         String   @id @default(uuid()) @map("_id")
  user_id    String?
  product_id String
  qtd        Int
  subtotal   Float
  price      Float
  total      Float
  createdAt  DateTime @default(now())
}
