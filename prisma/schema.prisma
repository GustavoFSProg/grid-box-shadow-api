// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
datasource db {
  provider = "mongodb"
  url      = env("DATABASE")
}

generator client {
  provider        = "prisma-client-js"
}

model Users {
  id    String @id @default(uuid()) @map("_id")
  name  String
  email String @unique
  password String
}

model Products {
  id    String  @id @default(uuid()) @map("_id")
  title String? @unique
  desc String?
  price Int? @default(0)
  image String?
  createdAt  DateTime @default(now())
}

model Estoque {
  id    String  @id @default(uuid()) @map("_id")
  idProduct String 
  qtd   Int
  

}