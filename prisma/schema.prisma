// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
datasource db {
  provider = "mongodb"
  url      = env("DATABASE")
}

generator client {
  provider = "prisma-client-js"
}

enum TipeUserRole {
  admin
  user
}

model Users {
  id          String       @id @default(uuid()) @map("_id")
  name        String
  email       String       @unique
  password    String
  cpf         String?      @default("CPF")
  street      String?      @default("Rua")
  number      String?      @default("222")
  complemento String?      @default("3")
  celular     String?      @default("9999")
  fone        String?      @default("9999")
  cep         String?      @default("CEP")
  bairro      String?      @default("barrr")
  city        String?      @default("cidade")
  state       String?      @default("RSS")
  role        TipeUserRole @default(admin)
}

model Products {
  id        String   @id @default(uuid()) @map("_id")
  title     String?  @unique
  desc      String?
  category  String?
  price     Int?     @default(0)
  image     String?
  createdAt DateTime @default(now())
}

model Estoques {
  id        String @id @default(uuid()) @map("_id")
  idProduct String
  qtd       Int
}

model Categorys {
  id        String   @id @default(uuid()) @map("_id")
  name      String
  createdAt DateTime @default(now())
}

model Cart {
  id        String   @id @default(uuid()) @map("_id")
  price     Float
  createdAt DateTime @default(now())
}

model Item {
  id        String   @id @default(uuid()) @map("_id")
  quantity  Int
  price     Float
  product   String
  cart      String
  createdAt DateTime @default(now())
}

model Transactions {
  id                   String          @id @default(uuid()) @map("_id")
  cartCode             String
  paymentType          PaymentTypeEnum @default(null)
  status               StatusTypeEnum  @default(start)
  installments         String
  total                Float
  transactionId        String
  processorResponse    String
  creditCardNumber     String
  creditCardExpiration String
  creditCardHolderName String
  creditCardCvv        String
  customerEmail        String
  customerName         String
  customerMobile       String
  customerDocument     String
  billingAdress        String
  billingNumber        String
  billingNeightborhood String
  billingState         String
  billingCity          String
  billingZipCode       String

  createdAt DateTime @default(now())
}

enum StatusTypeEnum {
  null
  start
  processing
  pending
  approved
  refused
  refunded
  chargeback
  error
}

enum PaymentTypeEnum {
  billing
  credit_card
  null
}
